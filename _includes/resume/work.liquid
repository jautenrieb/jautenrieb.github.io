{% assign ongoing_work = data[1] | where_exp: "item", "item.endDate == '' or item.endDate == nil" %}
{% assign completed_work = data[1] | where_exp: "item", "item.endDate != '' and item.endDate != nil" %}
{% assign completed_work = completed_work | sort: 'startDate' | reverse %}
{% assign work = ongoing_work | concat: completed_work %}

<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in work %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign startYear = content.startDate | split: '-' | first %}
            {% if content.endDate == "" or content.endDate == nil %}
              {% assign date = 'Since ' | append: startYear %}
            {% else %}
              {% assign endYear = content.endDate | split: '-' | first %}
              {% if startYear == endYear %}
                {% assign date = startYear %}
              {% else %}
                {% assign date = startYear | append: ' - ' | append: endYear %}
              {% endif %}
            {% endif %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
                </td>
              </tr>
              {% if content.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.position }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.name }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
